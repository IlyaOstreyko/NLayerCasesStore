@model NLayerCasesStore.WEBMVC.ModelsView.CaseViewModel
@{
    ViewBag.Title = "Edit Case";
}
<form asp-action="EditCase" asp-controller="Case" asp-route-CaseId="@Model.CaseId">
    <div class="form-group">
        <label asp-for="Company" class="control-label">Company</label>
        <input type="text" asp-for="Company" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label">Model</label>
        <input type="text" asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label">Color</label>
        <input type="text" asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Price</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CasesNumber" class="control-label">CasesNumber</label>
        <input type="number" asp-for="CasesNumber" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
