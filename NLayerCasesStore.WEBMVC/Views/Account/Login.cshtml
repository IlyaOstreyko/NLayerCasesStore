@model NLayerCasesStore.WEBMVC.ModelsView.LoginModel
 
<h2>Вход на сайт</h2>
<a asp-action="Register" asp-controller="Account">Регистрация</a>
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" style="color:#ff0000"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserMail">Введите Email</label>
            <input type="text" asp-for="UserMail" required=""/>
            <span asp-validation-for="UserMail" />
        </div>
        <div class="form-group">
            <label asp-for="UserPassword">Введите пароль</label>
            <input asp-for="UserPassword" required=""/>
            <span asp-validation-for="UserPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
