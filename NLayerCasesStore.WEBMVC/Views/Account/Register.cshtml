@model NLayerCasesStore.WEBMVC.ModelsView.RegisterModel
 
<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" style="color:#ff0000"></div>
    <div>
        <div>
            <label asp-for="UserMail">Введите Email</label><br />
            <input type="text" asp-for="UserMail" required=""/>
            <span asp-validation-for="UserMail" />
        </div>
        <div>
            <label asp-for="UserName">Введите Login</label><br />
            <input type="text" asp-for="UserName" required=""/>
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="UserPassword">Введите пароль</label><br />
            <input asp-for="UserPassword" required=""/>
            <span asp-validation-for="UserPassword" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" required=""/>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
